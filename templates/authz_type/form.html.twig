{% extends 'base.html.twig' %}

{% block body %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="{{ path('list_authztypes') }}">Authorization Types</a></li>
            {% if form.vars.value.id is null %}
                {% set value = 'Add' %}
            {% else %}
                {% set value = 'Edit' %}
            {% endif %}
            <li class="breadcrumb-item active" aria-current="page">{{ value }} Authorization Type</li>
        </ol>
    </nav>
    <h1>{{ value }} Authorization Type</h1>
    {{ form_start(form) }}
        {% if form_errors(form) %}
            <div class="alert alert-danger">
                {{ form_errors(form) }}
            </div>
        {% endif %}
        <div class="mb-3{% if form.type.vars.required %} required{% endif %}">
            {{ form_label(form.type, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.type) }}
        </div>
        <div class="mb-3{% if form.description.vars.required %} required{% endif %}">
            {{ form_label(form.description, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.description) }}
        </div>
        <div class="actions">
            {% if value == 'Add' %}
                {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}, 'label':  'Add Authorization Type'}) }}
            {% else %}
                {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}, 'label':  'Update Authorization Type'}) }}
                <a href="{{ path('list_authztypes') }}" class="btn btn-secondary">Cancel</a>
            {% endif %}
        </div>
    {{ form_end(form) }}
{% endblock %}