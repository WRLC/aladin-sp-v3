{% extends 'base.html.twig' %}

{% block title %}Metarefresh Results | WRLC Aladin-SP{% endblock %}

{% block body %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="{{ path('current_metadata') }}">Authorized Identity Providers</a></li>
            <li class="breadcrumb-item"><a href="{{ path('metarefresh') }}">Metarefresh</a></li>
            <li class="breadcrumb-item active" aria-current="page">Metarefresh Results</li>
        </ol>
    </nav>
    <h1>Metarefresh Results</h1>
    {% if logentries %}
        <div class="code-box">
                {% for logentry in logentries %}
                    <pre style="white-space: pre">{{ logentry|trim }}</pre>
                {% endfor %}
        </div>
    {% else %}
        <div>{{ "No output from metarefresh." | trans }}</div>
    {% endif %}
{% endblock %}