{% extends 'base.html.twig' %}

{% block body %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item" aria-current="page">Services</li>
        </ol>
    </nav>
    <div class="row align-items-center">
        <h1 class="col col-10">Services</h1>
        <span class="col col-2 text-end">
            <a href="{{ path('create_service') }}" class="btn btn-primary">Add Service</a>
        </span>
    </div>
    {% if services|length > 0 %}
        <table class="table table-striped table-sm">
            <thead>
                <tr class="table-dark">
                    <th class="col col-2">Slug</th>
                    <th class="col col-4">Name</th>
                    <th class="col col-6">URL</th>
                </tr>
            </thead>
            <tbody>
                {% for service in services %}
                    <tr>
                        <th scope="row" class="table-light">
                            <a href="{{ path('show_service', {'slug': service.Slug}) }}">{{ service.Slug }}</a>
                        </th>
                        <td>{{ service.Name }}</td>
                        <td>{{ service.Url }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <div class="mb3">No services found.</div>
    {% endif %}
{% endblock %}
