<!DOCTYPE html>
<html lang="en-US">
    <head>
        <meta charset="UTF-8">
        <title>
            {% block title %}
                {% if title|default %}{{ title }} | {% endif %}WRLC Aladin-SP
            {% endblock %}
        </title>
        <link rel="shortcut icon" href="{{ asset('images/favicon.ico') }}">
        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
            <script src="https://kit.fontawesome.com/ebc72dbf59.js" crossorigin="anonymous"></script>
        {% endblock %}
    </head>
    <body>
        <header class="header mb-4 text-center">
            <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
                <div class="container">
                    <div class="navbar-brand">
                        <img class="logo" alt="WRLC logo" src="{{ asset('images/wrlc-logo-7-white.png') }}"/> WRLC Aladin-SP
                    </div>
                </div>
            </nav>
        </header>
        <div class="container mt-3 px-4" >
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
            {% block body %}{% endblock %}
            {% block javascripts2 %}{% endblock %}
        </div>
        <footer class="footer mt-3">
            <div class="container text-center">
                <p class="text-muted small">This service provided by the <a href="https://www.wrlc.org/">Washington Research Library Consortium</a>.</p>
            </div>
        </footer>
    </body>
</html>
